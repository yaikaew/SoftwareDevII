<Window x:Class="Dice1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Dice1"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid Margin="226,72,249,72">
        <Canvas  x:Name="showdice" Background="#FFF0C2C2">
            <TextBox x:Name="Show" Canvas.Left="115" TextWrapping="Wrap" Text="TextBox" Canvas.Top="92" Width="120"/>
            <Button Content="Rollup" Canvas.Left="75" Canvas.Top="216" Click="Button_Click"/>
            <Button Content="RollDown" Canvas.Left="75" Canvas.Top="241" Click="Click_Roll_down" HorizontalAlignment="Center" VerticalAlignment="Top"/>
            <Button Content="RollRight" Canvas.Left="227" Canvas.Top="216" Click="Click_Roll_right" HorizontalAlignment="Left" VerticalAlignment="Center"/>
            <Button Content="RollLeft" Canvas.Left="227" Canvas.Top="241" Click="Click_Roll_left" HorizontalAlignment="Left" VerticalAlignment="Center"/>
        </Canvas>

    </Grid>
</Window>
